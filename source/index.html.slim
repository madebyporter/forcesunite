          .col-12.col-lg-6.offset-lg-1.d-flex.flex-wrap.align-items-start.align-content-start
            form.form name="contact" method="POST" data-netlify="true"
              fieldset.form-fieldset data-sal="fade" data-sal-delay="600" data-sal-duration="1000"
                label.form-label Name
                input.form-input-text type="text" name="Name" id="Name"
              fieldset.form-fieldset data-sal="fade" data-sal-delay="700" data-sal-duration="1000"
                label.form-label Email
                input.form-input-text type="email" name="Email" id="Email"
              fieldset.form-fieldset data-sal="fade" data-sal-delay="800" data-sal-duration="1000"
                label.form-label Portfolio or Product URL 
                input.form-input-text type="text" name="URL" id="URL"
              fieldset.form-fieldset data-sal="fade" data-sal-delay="900" data-sal-duration="1000"
                input.form-input-submit type="submit" name="submit" id="submit"